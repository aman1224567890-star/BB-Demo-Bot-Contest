var question = "How do you store and retrieve variables in BB bots?";
var options = [
  "Using Bot.saveVar() and Bot.getVar()",
  "Using Api.store() and Api.read()",
  "By writing in a text file",
  "You cannot store variables in BB"
];

Api.sendPoll({
  chat_id: user.telegramid,
  question: question,
  options: options,
  is_anonymous: false,
  type: "quiz",
  correct_option_id: 0,
  explanation: "Bot.saveVar(name, value) stores a variable and Bot.getVar(name) retrieves it in Bots.Business."
});

Api.sendMessage({
  chat_id: user.telegramid,
  text: "Click Next to continue.",
