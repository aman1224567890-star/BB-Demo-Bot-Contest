var question = "Which method is used in BJS to send a text message to a user?";
var options = ["Api.sendMessage()", "Bot.write()", "console.log()", "send.Text()"];

Api.sendPoll({
  chat_id: user.telegramid,
  question: question,
  options: options,
  is_anonymous: false,
  type: "quiz",
  correct_option_id: 0,
  explanation: "Api.sendMessage() is the correct method to send a text message in Bots.Business."
});

Api.sendMessage({
  chat_id: user.telegramid,
  text: "Click Next to continue.",
  reply_markup: {
    inline_keyboard: [
      [{ text: "Next ➡️", callback_data: "/quiz3" }]
    ]
  }
});

